{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Development",
      "args": [
        "${workspaceFolder}/src/index.ts"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
    }
  ]
}